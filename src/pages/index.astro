---
// Import Stylesheet
import '../styles/global.css';

// data source
// replace temporary JSON placeholder API
const source = 'https://valorant-api.com/v1/agents';
// fetch the data
const res = await fetch(source); 
// store retreived data
const data = await res.json();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Normalize CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

		<title>Valorant Agents</title>
	</head>
	<body>
		
		<header class="masthead">
			<h1 class="site-title">Agents</h1>
		</header>

		<main id="content" class="main-area">

			<ul class="cards">
		  
				<!-- Your API Data -->
				{
					data.data.map((agent) => (

						<li class="card">
							<img src={agent.displayIconSmall} alt={agent.displayName} />
							<h2>{agent.displayName}</h2>
							<p>{agent.description}</p>

							<h3>Abilities</h3>
							<p>{agent.abilities[0].displayName} - {agent.abilities[0].description}</p>

							<p>{agent.abilities[1].displayName} - {agent.abilities[1].description}</p>

							<p>{agent.abilities[2].displayName} - {agent.abilities[2].description}</p>

							<h3>Ultimate</h3>
							<p>{agent.abilities[3].displayName} - {agent.abilities[3].description}</p>

						


						
						</li>
					))
				}
		  
			</ul>
		  </main>
		  


	</body>
</html>
